<%- include('header') %>

        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        <h4 class="page-title">View All Users</h4>
                        <div class="ml-auto text-right">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Library</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title m-b-0">Users Information</h5>
                            </div>
                            <table class="table">
                                  <thead>
                                    <tr>
                                      <th scope="col">#</th>
                                      <th scope="col">FirstName</th>
                                      <th scope="col">LastName</th>
                                      <th scope="col">Email</th>
                                      <th scope="col">Gender</th>
                                      <th scope="col">ContactNo</th>
                                      <th scope="col">Hobbies</th>
                                      <th scope="col">Image</th>
                                      <th scope="col" colspan="2">Actions</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    <% users.forEach((user, i) => { %>
                                        <tr>
                                            <th scope="row"><%= i + 1 %></th>
                                            <td><%= user.firstname %></td>
                                            <td><%= user.lastname %></td>
                                            <td><%= user.email %></td>
                                            <td><%= user.gender %></td>
                                            <td><%= user.contactNo %></td>
                                            <td><%= user.hobbies %></td>
                                            <td><img src="<%= user.image %>" height="50" /></td>
                                            <td><a href="/users/edit-user/<%= user.id %>"><i class="fas fa-edit"></i></a></td>
                                            <td><a href="/users/delete-user/<%= user.id %>"><i class="fas fa-trash"></i></a></td>
                                        </tr>
                                    <% }) %>
                                  </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
<%- include('footer') %>